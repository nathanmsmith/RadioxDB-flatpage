{
  "name": "gradissue-2017",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/daily-bruin/gradissue-2017.git",
  "scripts": {
    "copy-html": "cp source/html/* build/",
    "compile-js:dev": "babel source/js -d build/js --source-maps",
    "autoprefix": "postcss --use autoprefixer -r build/css/*.css",
    "compile-sass:dev": "node-sass source/sass/*.scss -o build/css && postcss --use autoprefixer -r build/css/*.css",
    "browser-sync": "browser-sync start --server build/ --files build/ --reload-delay 2000",
    "dev": "watch 'npm run copy-html' source/html/ & watch 'npm run compile-js:dev' source/js/ & watch 'npm run compile-sass:dev' source/sass/ & npm run browser-sync"
  },
  "dependencies": {
    "leaflet": "^1.0.3",
    "leaflet-providers": "^1.1.16"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "babel-register": "^6.24.1",
    "browser-sync": "^2.18.12",
    "cpx": "^1.5.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "htmlhint": "^0.9.13",
    "node-sass": "^4.5.3",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "watch": "^1.0.2"
  }
}
