{
  "name": "gradissue-2017",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/daily-bruin/gradissue-2017.git",
  "scripts": {
    "copy-html": "cpx source/html/* build/ --watch",
    "compile-js:dev": "babel --watch source/js -d build/js --source-maps",
    "autoprefix": "postcss --use autoprefixer -r build/css/*",
    "compile-sass:dev": "node-sass --watch source/sass/*.scss -o build/css && npm run autoprefix",
    "browser-sync": "browser-sync start --server build/ --files build/",
    "dev": "npm run copy-html & npm run compile-js:dev & npm run compile-sass:dev & npm run browser-sync"
  },
  "dependencies": {
    "leaflet": "^1.0.3",
    "leaflet-providers": "^1.1.16"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "babel-register": "^6.24.1",
    "browser-sync": "^2.18.12",
    "cpx": "^1.5.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "htmlhint": "^0.9.13",
    "node-sass": "^4.5.3",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0"
  }
}
